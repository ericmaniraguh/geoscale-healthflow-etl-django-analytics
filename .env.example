# ================================
# DJANGO CONFIGURATION
# ================================
# Secret key for Django - Generate a new one for production
SECRET_KEY=your-secret-key-here

# Debug mode - Set to False in production
DEBUG=True

# ================================
# MONGODB CONNECTION SETTINGS
# ================================
# Main MongoDB URI - Replace with your MongoDB connection string
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/

# ================================
# HEALTH CENTER LAB DATA
# ================================
# Database for health center lab records
MONGO_DB=your-health-center-db-name
MONGO_COLLECTION=your-health-center-collection

# Enhanced collections (optional - for dynamic collection naming)
MONGO_HEALTHCENTER_DB=your-health-center-db-name
MONGO_HEALTHCENTER_COLLECTION=your-health-center-collection

# ================================
# HMIS RECORDS DATA
# ================================
# Database for HMIS (Health Management Information System) records
MONGO_HMIS_DB=your-hmis-db-name
MONGO_HMIS_COLLECTION=your-hmis-collection

# ================================
# WEATHER DATA
# ================================
# Database for weather data (temperature and precipitation)
MONGO_WEATHER_DB=your-weather-db-name
MONGO_TEMP_COLLECTION=your-temperature-collection
MONGO_PREC_COLLECTION=your-precipitation-collection

# ================================
# GEOSPATIAL DATA
# ================================
# Shapefile data storage
MONGO_SHAPEFILE_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&maxPoolSize=50&serverSelectionTimeoutMS=30000
MONGO_SHAPEFILE_DB=your-shapefile-db-name
MONGO_SHAPEFILE_COLLECTION=your-boundaries-collection

# Slope raster data storage
MONGO_SLOPE_DB=your-slope-db-name
MONGO_DB_NAME=your-slope-db-name
MONGO_COLLECTION_NAME=your-slope-collection

# ================================
# CLOUDINARY CONFIGURATION
# ================================
# Cloudinary credentials for file storage
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_URL=cloudinary://api-key:api-secret@cloud-name


# ================================
# PostgreSQL CONFIGURATION
# ================================
# PostgreSQL staging database configuration
STAGING_DB_NAME=your-database-name
STAGING_DB_USER=your-database-username
STAGING_DB_PASSWORD=your-database-password
STAGING_DB_HOST=your-database-host  # usually 'localhost'
STAGING_DB_PORT=5432  # default PostgreSQL port
