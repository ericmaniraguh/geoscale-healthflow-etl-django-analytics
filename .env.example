# ================================
# DJANGO CONFIGURATION
# ================================
SECRET_KEY=your_secret_key_here
DEBUG=True

# ================================
# SUPERUSER CREDENTIALS
# ================================
DJANGO_SUPERUSER_USERNAME=your_superuser_username
DJANGO_SUPERUSER_EMAIL=your_superuser_email
DJANGO_SUPERUSER_PASSWORD=your_superuser_password

# ================================
# MONGODB CONNECTION SETTINGS
# ================================
# Main MongoDB URI
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/

# Local MongoDB URI (optional)
# MONGO_URI=mongodb://localhost:27017/

# ================================
# DATABASE AND COLLECTION
# ================================
MONGO_DB=your_db_name
MONGO_COLLECTION=your_collection_name

# Optional enhanced collections
MONGO_HEALTHCENTER_DB=your_db_name
MONGO_HEALTHCENTER_COLLECTION=your_collection_name

# ================================
# HMIS RECORDS DATA
# ================================
MONGO_HMIS_DB=your_hmis_db
MONGO_HMIS_COLLECTION=your_hmis_collection

# ================================
# WEATHER DATA
# ================================
MONGO_WEATHER_DB=your_weather_db
MONGO_TEMP_COLLECTION=your_temperature_collection
MONGO_PREC_COLLECTION=your_precipitation_collection

# ================================
# GEOSPATIAL DATA
# ================================
# Shapefile data Mongo URI
# MONGO_SHAPEFILE_URI=mongodb+srv://username:password@cluster.mongodb.net/

# Local MongoDB URI for shapefiles
MONGO_SHAPEFILE_URI=mongodb://localhost:27017/
MONGO_SHAPEFILE_DB=your_shapefile_db
MONGO_SHAPEFILE_COLLECTION=your_shapefile_collection

# Slope data GeoTIFF
MONGO_DB_NAME=your_slope_geotiff_db
MONGO_COLLECTION_NAME=your_slope_geotiff_collection

# Slope data GeoJSON
MONGO_DB_GEOJSON=your_slope_geojson_db
MONGO_COLLECTION_GEOJSON=your_slope_geojson_collection

# =====================================
# POSTGRESQL CREDENTIALS (Airflow / pgAdmin)
# =====================================
STAGING_DB_HOST=localhost
STAGING_DB_PORT=5432
STAGING_DB_NAME=your_postgres_db
STAGING_DB_USER=your_postgres_user
STAGING_DB_PASSWORD=your_postgres_password

# PgAdmin credentials
PGADMIN_DEFAULT_EMAIL=your_pgadmin_email
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password

# ================================
# EMAIL CONFIGURATION
# ================================
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password
USE_CONSOLE_EMAIL=false

# ================================
# SITE CONFIGURATION
# ================================
# SITE_URL=http://localhost:8000

# ================================
# GOOGLE OAUTH CONFIGURATION
# ================================
GOOGLE_OAUTH2_KEY=your_google_oauth2_key
GOOGLE_OAUTH2_SECRET=your_google_oauth2_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
